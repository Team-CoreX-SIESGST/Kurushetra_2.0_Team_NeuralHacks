{
  "project": {
    "name": "File Processing & RAG System",
    "version": "1.0.0",
    "description": "A comprehensive system for processing multiple file formats and generating AI summaries",
    "author": "Development Team",
    "created": "2024-01-15"
  },
  "supported_formats": [
    {
      "type": "PDF",
      "extensions": [".pdf"],
      "features": ["text_extraction", "table_extraction", "metadata"]
    },
    {
      "type": "Word Documents",
      "extensions": [".docx", ".doc"],
      "features": ["paragraphs", "tables", "properties"]
    },
    {
      "type": "Excel Spreadsheets",
      "extensions": [".xlsx", ".xls"],
      "features": ["multi_sheet", "data_analysis", "statistics"]
    },
    {
      "type": "Text Files",
      "extensions": [".txt"],
      "features": ["full_text", "statistics"]
    },
    {
      "type": "CSV Files",
      "extensions": [".csv"],
      "features": ["data_parsing", "statistics", "encoding_detection"]
    }
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/supported-formats",
      "description": "List all supported file formats"
    },
    {
      "method": "POST",
      "path": "/process-file",
      "description": "Extract data from uploaded file"
    },
    {
      "method": "POST",
      "path": "/process-and-summarize",
      "description": "Process file and generate AI summary"
    },
    {
      "method": "POST",
      "path": "/summarize-json",
      "description": "Generate summary from JSON data"
    },
    {
      "method": "GET",
      "path": "/health",
      "description": "Check system health and API status"
    }
  ],
  "configuration": {
    "max_file_size_mb": 100,
    "supported_languages": ["English", "Spanish", "French", "German"],
    "ai_model": "Gemini-1.5-Flash",
    "summary_types": ["general", "key_points", "technical", "executive", "analysis"],
    "output_formats": ["JSON", "CSV", "TXT"],
    "processing_timeout": 300
  },
  "statistics": {
    "total_formats_supported": 11,
    "average_processing_time": "2.3 seconds",
    "success_rate": "98.5%",
    "total_files_processed": 1247
  }
}
